<%= f.error_notification %>
<%= f.input :update_section, as: :hidden %>
<%= f.input :detail_section, as: :hidden %>
<div class="form-inputs">
  <%= f.input :description	, label: "Heading", as: :string%>
  <%= f.input :title %>
  <%= f.input :published_date %>
  <div class="input float required <%= "error" if !@article.errors[:article].empty? %>">

	<label>
	  PDF
	  <br/>
	  <% if @article.article.exists? %>
		  Currently Selected: <%= @article.article_file_name %>
	  <% end %>
	  <%= f.file_field :article %>
	</label>
  </div>

</div>

<div class="form-actions">
  <%= f.button :submit, class: "button" %>
  <%= link_to 'Back', admin_content_path, class: "button" %>
</div>

